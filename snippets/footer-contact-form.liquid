<section class="footer-4">
  <h2>STAY IN THE LOOP</h2>
  <p>Subscribe to Henri news + events.</p>
  {% form 'customer', class: 'newsletter-form' %}
    {% comment %}
      <div style="position: absolute; left: -5000px;" aria-hidden="true">
        <input type="text" name="b_855936e5e79f929475ff6b172_240338a0dc" tabindex="-1" value="">
      </div>
    {% endcomment %}
    <fieldset>
      <input
        type="text"
        name="contact[first_name]"
        value="{{ form.first_name }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        {% if form.errors %}
          autofocus
          aria-invalid="true"
          aria-describedby="Newsletter-error--{{ section.id }}"
        {% elsif form.posted_successfully? %}
          aria-describedby="Newsletter-success--{{ section.id }}"
        {% endif %}
        placeholder="Name *"
        required
      >
      <input
        type="text"
        name="contact[last_name]"
        value="{{ form.last_name }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        {% if form.errors %}
          autofocus
          aria-invalid="true"
          aria-describedby="Newsletter-error--{{ section.id }}"
        {% elsif form.posted_successfully? %}
          aria-describedby="Newsletter-success--{{ section.id }}"
        {% endif %}
        placeholder="Last Name *"
        required
      >
      <input
        type="email"
        name="contact[email]"
        value="{{ form.email }}"
        aria-required="true"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          autofocus
          aria-invalid="true"
          aria-describedby="Newsletter-error--{{ section.id }}"
        {% elsif form.posted_successfully? %}
          aria-describedby="Newsletter-success--{{ section.id }}"
        {% endif %}
        placeholder="{{ 'newsletter.label' | t }}"
        required
      >
    </fieldset>
    <button
      type="submit"
      class=""
      name="commit"
      id="Subscribe"
      aria-label="{{ 'newsletter.button_label' | t }}"
    >
      Sign up
    </button>
  {% endform %}
</section>
