{% render 'section-settings' %}

<section class="bg-light">
    <div class="container">
        <h2 class="mb-40">{{ section.settings.heading }}</h2>
        <ul class="grid xxl-grid-5 brand-logos card-gap">
            {% for block in section.blocks %}
                <li><a href="{{ block.settings.url}}"><img src="{{ block.settings.image | img_url:"1000x" }}" alt="Talenti" loading="lazy"></a></li>
            {% endfor %}
        </ul>
    </div>
</section>

{% schema %}

    {
        "name": "Big Light",
        "settings":[
            {
                "type":"color",
                "id":"bg_color",
                "label":"Background Color"
            },
            {
                "type": "header",
                "content": "padding settings"
            },
            {
                "type": "range",
                "id": "ptop",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding top",
                "default": 20
            },
            {
                "type": "range",
                "id": "pbottom",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding bottom",
                "default": 20
            },
            {
                "type":"text",
                "id":"heading",
                "label":"Heading"
            }

        ],
        "blocks":[
            {
                "name":"Grid Item",
                "type":"grid_item",
                "settings":[
                    {
                        "type" : "image_picker",
                        "id":"image",
                        "label":"Image"
                    },{
                        "type" : "url",
                        "id":"url",
                        "label":"Url"
                    }
                ]
            }
        ],  
        "presets":[
            {
                "name":"Big Light"
            }
        ]        
    }
{% endschema %}