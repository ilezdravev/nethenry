{% render 'section-settings' %}


<div class='team-wrapper'>
    <div>
        <h2 class="text-accent">{{ section.settings.heading }}</h2>
    </div>
    <ul class="team-members grid lg-grid-4">
        {% for block in section.blocks %}
            <li class="team-card">
                <div class="team-card--container">
                    <div class="team-card--photo">
                        <img src="{{ block.settings.image | img_url:"1000x" }}" width height alt="{{ block.settings.image.alt }}" loading="lazy" data-xblocker="passed">
                    </div>
                    <div class="team-card--content">
                        <h3>{{ block.settings.title }}</h3>
                        <span class="subtitle">{{ block.settings.desc }}</span>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

{% schema %}

    {
        "name": "Team members",
        "settings":[
            {
                "type":"color",
                "id":"bg_color",
                "label":"Background Color"
            },{
                "type": "header",
                "content": "padding settings"
            },{
                "type": "range",
                "id": "ptop",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding top",
                "default": 20
            },{
                "type": "range",
                "id": "pbottom",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding bottom",
                "default": 20
            },{
                "type":"text",
                "id":"heading",
                "label":"Heading"
            }
        ],
        "blocks":[
            {
                "name":"Grid Item",
                "type":"gird_item",
                "settings":[
                    {
                        "type" : "image_picker",
                        "id":"image",
                        "label":"Image"
                    },{
                        "type" : "text",
                        "id":"title",
                        "label":"Title"
                    },{
                        "type" : "text",
                        "id":"desc",
                        "label":"Description"
                    }
                ]
            }
        ],  
        "presets":[
            {
                "name":"Team members"
            }
        ]        
    }
{% endschema %}
