{% render 'section-settings' %}

<div class="site-wrapper">
    <main class="page-content fade-in standard-layout container">
        <header class="page-header"><h1 class="text-accent">{{ section.settings.heading }}</h1></header>
        <div class="content-inner">
            <section class="content-block articles grid md-grid-4 card-gap">    
                {% for block in section.blocks %}
                    {% render 'article-card', url : block.settings.url,img : block.settings.image, title: block.settings.title, sub_title : block.settings.sub_title , desc : block.settings.desc , text : block.settings.text%}
                {% endfor %}
            </section>
        </div>
    </main>
{% schema %}

    {
        "name": "Galleries",
        "settings":[
            {
                "type":"color",
                "id":"bg_color",
                "label":"Background Color"
            },{
                "type": "header",
                "content": "padding settings"
            },{
                "type": "range",
                "id": "ptop",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding top",
                "default": 20
            },{
                "type": "range",
                "id": "pbottom",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding bottom",
                "default": 20
            },{
                "type":"text",
                "id":"heading",
                "label":"Heading"
            }
        ],
        "blocks":[
            {
                "name":"Grid Item",
                "type":"gird_item",
                "settings":[
                    {
                        "type" : "image_picker",
                        "id":"image",
                        "label":"Image"
                    },{
                        "type" : "url",
                        "id":"url",
                        "label":"Url"
                    },{
                        "type" : "text",
                        "id":"title",
                        "default":"Your title",
                        "label":"Title"
                    },{
                        "type" : "text",
                        "id":"sub_title",
                        "default":"Sub title",
                        "label":"Sub title"
                    },{
                        "type" : "text",
                        "id":"desc",
                        "default":"Description",
                        "label":"Description"
                    },{
                        "type" : "text",
                        "id":"text",
                        "default":"Read More",
                        "label":"Link Text"
                    }
                ]
            }
        ],  
        "presets":[
            {
                "name":"Galleris"
            }
        ]        
    }
{% endschema %}
