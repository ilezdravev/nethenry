{% render 'section-settings' %}
<div class="hero">
    <div class="hero-bg">
        <picture>
            <img src="{{ section.settings.image | img_url:"1000x" }}" alt="{{ section.settings.image.alt }}" loading="lazy">
        </picture>
    </div>
    <div class="hero-text">
        <div class="text-wrapper">
            <h1>{{ section.settings.heading }}</h1>
        </div>
    </div>
</div>


{% schema %}

    {
        "name": "Hero",
        "settings":[
            {
                "type":"color",
                "id":"bg_color",
                "label":"Background Color"
            },
            {
                "type": "header",
                "content": "padding settings"
            },
            {
                "type": "range",
                "id": "ptop",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding top",
                "default": 20
            },
            {
                "type": "range",
                "id": "pbottom",
                "min": 0,
                "max": 36,
                "step": 4,
                "unit": "px",
                "label": "Padding bottom",
                "default": 20
            },
            {
                "type":"text",
                "id":"heading",
                "label":"Heading"
            },{
                "type" : "image_picker",
                "id":"image",
                "label":"Image"
            }
        ],
        "presets":[
            {
                "name":"Hero"
            }
        ]        
    }
{% endschema %}